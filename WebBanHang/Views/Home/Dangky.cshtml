
@using WebBanHang.Models
@model ThanhVien
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<head>
    <script src="~/Content/js/index.js"></script>
    <link href="~/Content/css/dang-ky1.css" rel="stylesheet">
</head>
<div id="thantrang">
    <div class="contener">
      
        <div id="trangphai">
            <div class="title-gioithieu">
                <h1 style="color: red">TẠO TÀI KHOẢN</h1>
            </div>
            <div class="userbox">
                @using(Html.BeginForm())
                {
                     <h3>Họ Tên</h3>
                    <div class="f_row-2">
                        <input type="text" class="input-field" placeholder="Họ Tên" id="HoTen">
                        <span id="error_name"></span>
                    </div>
                        <h3>Tài Khoản</h3>
                    <div class="f_row-2">
                        <input type="text" class="input-field" placeholder="Tài Khoản" name="TaiKhoan" >
                        <span id="error_account"></span>
                    </div>
                        <h3>Địa Chỉ</h3>
                    <div class="f_row-2">
                        <input type="text" class="input-field" placeholder="Địa Chỉ" name="DiaChi">
                        <span id="error_account"></span>
                    </div>
                        <h3>Email</h3>
                    <div class="f_row-2">
                        <input type="text" class="input-field" placeholder="Email" name="Email" 
                        <span id="error_email"></span>
                    </div>
                        <h3>Số Điện Thoại</h3>
                    <div class="f_row-2">
                        <input type="text" class="input-field" placeholder="Số Điện Thoại" name="SDT" >
                        <span id="error_phone"></span>
                    </div>
                        <h3>Mật Khẩu</h3>

                    <div class="f_row-2">
                        <input type="text" class="input-field" placeholder="Mật Khẩu" name="MatKhau">
                        <span id="error_password"></span>
                    </div>
                        <h3>Nhập Lại Mật Khẩu</h3>
                    <div class="f_row-2">
                        <input type="text" class="input-field" placeholder="Nhập Lại Mật Khẩu" name="MatKhau">
                        <span id="error_password2"></span>
                    </div>
                    <div class="action_bottom">
                        <input class="btn" type="submit" onclick="login() "value=" đăng ký">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    function login() {
        var check_name = /^[a-zA-Z ]{1,}$/;
        var str_name = document.getElementById("HoTen").value;

        var check_account = /^\w{3,}$/;
        var str_account = document.getElementById("TaiKhoan").value;

        var check_diachi = /^\w{3,}$/;
        var str_account = document.getElementById("DiaChi").value;

        var check_email = /^[a-z0-9]{5,32}[a-z0-9]{2,}\.[a-z0-9]{2,4}$/;
        var str_email = document.getElementById("Email").value;
        var check_account = /^\w{3,}$/;

        var check_phone = /^[0-9]{10}/;
        var str_phone = document.getElementById("SDT").value;

        var check_password = /^\w{8,}$/;
        var str_password = document.getElementById("MatKhau").value;

        var str_password2 = document.getElementById("NhapLaiMatKhau").value;

        if (str_name == "") {
            document.getElementById('error_name').innerHTML = "Bạn chưa nhập họ tên.";
            document.getElementById('HoTen').style.border = '1px solid red';
            return false;
        }
        else if (!check_name.test(str_name)) {
            alert("user id i");
            document.getElementById('HoTen').style.border = '1px solid red';
            return false;
        }
        else if (str_email == "") {
            document.getElementById('error_email').innerHTML = "Bạn chưa nhập email.";
            document.getElementById('Email').style.border = '1px solid red';
            return false;
        }
        else if (!check_email.test(str_email)) {
            document.getElementById('error_email').innerHTML = "Bạn nhập sai email.";
            document.getElementById('Email').style.border = '1px solid red';
            return false;
        }
        else if (str_phone == "") {
            document.getElementById('error_phone').innerHTML = "Bạn chưa nhập số điện thoại.";
            document.getElementById('SDT').style.border = '1px solid red';
            return false;
        }
        else if (!check_phone.test(str_phone)) {
            document.getElementById('error_phone').innerHTML = "Bạn nhập sai số điện thoại.";
            document.getElementById('SDT').style.border = '1px solid red';
            return false;
        }
        else if (str_account == 0) {
            document.getElementById('error_account').innerHTML = "Bạn nhập sai họ tên";
            document.getElementById('TaiKhoan').style.border = '1px solid red';
            return false;
        }
        else if (!check_account.test(str_account)) {
            document.getElementById('error_account').innerHTML = "Bạn nhập sai họ tên";
            document.getElementById('TaiKhoan').style.border = '1px solid red';
            return false;
        }
        else if (str_password == 0) {
            document.getElementsById('error_password').innerHTML = "Bạn chưa nhập mật khẩu";
            document.getElementById('MatKhau').style.border = '1px solid red';
            return false;
        }
        else if (!check_password.test(str_password)) {
            document.getElementById('error_password').innerHTML = "Bạn nhập sai mật khẩu";
            document.getElementById('MatKhau').style.border = '1px solid red';
            return false;
        }
        else if (str_password2 == 0) {
            document.getElementById('error_password2').innerHTML = "Bạn chưa xác  nhận mật khẩu";
            document.getElementById('password2').style.border = '1px solid red';
            return false;
        }
        else if (!check_password2.test(str_password2)) {
            document.getElementById('error_password2').innerHTML = "Bạn nhập mật khẩu không đúng";
            document.getElementById('password2').style.border = '1px solid red';
            return false;
        }

        else {
            alert("Bạn đăng ký thành công");

            document.getElementById('error_name').innerHTML = "";
            document.getElementById('HoTen').style.border = '1px solid #a4a4a4';
            document.getElementById('error_email').innerHTML = "";
            document.getElementById('Email').style.border = '1px solid #a4a4a4';
            document.getElementById('error_phone').innerHTML = "";
            document.getElementById('SDT').style.border = '1px solid #a4a4a4';
            document.getElementById('error_account').innerHTML = "";
            document.getElementById('TaiKhoan').style.border = '1px solid #a4a4a4';
            document.getElementById('error_password').innerHTML = "";
            document.getElementById('MatKhau').style.border = '1px solid #a4a4a4';
            document.getElementById('error_password2').innerHTML = "";
            document.getElementById('password2').style.border = '1px solid #a4a4a4';
        }
    }
</script>